{% extends 'partials/_master.twig' %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}
{% block main %}
    {% setcontent options = "Options" %}
    <div class="client_section">
        <div class="contact_section layout_padding">
            <div class="container">
                <h1 class="contact_text">Nous contacter</h1>
            </div>
        </div>
        <div class="contact_section_2 layout_padding">
            <div class="container-fluid">
                <div class="d-flex flex-column flex-lg-row my-5 justify-content-between align-items-center">
                    <div class="col-12 col-lg-6 col-xl-6 d-flex align-items-center">{{ boltforms('contact') }}</div>
                    <div class="col-10 col-lg-6 col-xl-6 d-flex justify-content-center my-5">
                        <img class="image-rounded image_13" src="{{ record.image |default() }}" alt="image de contact">
                    </div>
                </div>
                <div class="row d-flex justify-content-around">
                    <div class="col-md-4 text-center mb-5 mb-md-0">
                        <h2>
                            Bocaux des champs
                        </h2>
                        <ul class="list-unstyled pl-0">
                            <li>{{ options.emailBocaux ?? "Veuillez renseigner l'email bocaux des champs dans l'administration" }}</li>
                            <li>{{ options.adressBocaux ?? "Veuillez renseigner l'adresse bocaux des champs dans l'administration" }}</li>
                        </ul>
                    </div>
                    <div class="col-md-4 text-center">
                        <h2>
                            ATC 45
                        </h2>
                        <ul class="list-unstyled pl-0">
                            <li>{{ options.emailATC45 ?? "Veuillez renseigner l'email ATC45 dans l'administration" }}</li>
                            <li>{{ options.adressATC45 ?? "Veuillez renseigner l'adresse ATC45 dans l'administration" }}</li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock main %}
