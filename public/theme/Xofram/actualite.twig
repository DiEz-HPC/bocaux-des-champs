{% extends 'partials/_master.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/actuality.css') }}">
    <link rel="stylesheet" href="{{ asset('css/actualitySingle.css') }}">

{% endblock %}
{% block main %}
    <div class="services_section layout_padding">
        <div class="actu container">
            <div class="mb-5">
                <h1 class="my-5 pt-5 fw-bold text-center text-lg-start">{{ record|title }}</h1>
                {% with { 'record': record, 'exclude': [record|image.fieldname|default()] } %}
                {{ block('sub_fields', 'helpers/_fields.twig') }}
                {% endwith %}
            </div>
            {% include 'partials/helpers/_relatedContent.twig' %}
        </div>
    </div>
{% endblock main %}
