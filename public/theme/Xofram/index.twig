{% extends 'partials/_master.twig' %}
{% use '@theme/partials/components/_index/_indexProduct.twig' %}
{% use '@theme/partials/components/_index/_indexAbout.twig' %}
{% use '@theme/partials/components/_index/_indexEngagement.twig' %}
{% use '@theme/partials/components/_index/_indexBlog.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/actuality.css') }}">
    {{ block('indexProductStyle') }}
{% endblock stylesheets %}

{% block main %}

    {{ block('indexAbout') }}
    
    {{ block('indexEngagement') }}

    {{ block('indexProduct') }}

    {{ render(path('app_index_testimony')) }}

    {{ block('indexBlog') }}

{% endblock main %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $(".owl-carousel").owlCarousel({
                lazyLoad: true,
                loop: true,
                margin: 10,
                center: true,
                nav: true,
                autoplay: true,
                autoplayTimeout: 7000,
                autoplayHoverPause: true,
                items: 1,
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
                        items: 1
                    },
                    1000: {
                        items: 1
                    }
                }
            });
        });
    </script>
     {{ block('indexProductJs') }}
{% endblock javascript %}
