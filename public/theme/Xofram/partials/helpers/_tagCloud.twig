{% block tagCloudStylesheet %}
    <link rel="stylesheet" href="{{ asset('css/tagBadge.css') }}">
{% endblock %}
{% block tagCloud %}
<div class="mb-5">
    <div class="form-container">
        <form class="search-bar">
            <input class="form-control" type="text" name="anyField--like" placeholder="Taper votre recherche ...">
            <button type="submit">
                {% include 'images/searchBar.svg' %}
            </button>
        </form>
    </div>
    <div class="row g-0 justify-content-center tagBadgeContainer pt-4">
        <a href="/videos" class="tagBadge position-relative">
            Tout voir
        </a>
        {% for tag in tag_cloud(taxonomyType) %}
            {% if tag.count > 0 %}
                <a href="/{{ taxonomyType }}/{{ tag.slug }}" class="tagBadge position-relative">
                    {{ tag.name }}
                </a>
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock tagCloud %}