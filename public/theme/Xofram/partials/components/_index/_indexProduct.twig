{% block indexProduct %}
    {% setcontent products = 'Produits' latest limit 5 %}
    <div class="services_section layout_padding mb-5">
        <div class="container">
            <h1 class="services_taital">Nos produits</h1>
            <div class="services_section_2 layout_padding">
                <div class="row justify-content-around">
                    {% for product in products %}
                        <div class="col-md-4">
                            <div class="image_main">
                                <img src="{{ product|image }}" class="image_2">
                                <h2 class="vegetable_text">{{ product|title|excerpt(40) }}</h2>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="read_bt_1">
                <a href="{{ path('listing', {'contentTypeSlug': 'produits' }) }}">Voir nos produits</a>
            </div>
        </div>
    </div>
{% endblock indexProduct %}
