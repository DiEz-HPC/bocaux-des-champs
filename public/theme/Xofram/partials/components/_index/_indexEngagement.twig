{% block indexEngagement %}
    {% setcontent engagements = 'engagements' %}
    <!-- choose section star -->
    <div class="choose_section layout_padding">
        <div class="container">
            <h1 class="choose_taital">Nos engagements</h1>
            <div class="choose_section_2 layout_padding">
                <div class="row justify-content-around">
                    {% if engagements.earth_engagements is defined %}
                        {% for engagement in engagements.earth_engagements %}
                            <div class="col-sm-4">
                                <div class="icon_1"><img src="{{ asset(engagement.image.path) }}" alt="{{ engagement.image.alt }}"></div>
                                <h2 class="farm_text">{{ engagement.title }}</h2>
                                <p class="dummy_text">{{ engagement.paragraph|excerpt(150) }}</p>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="read_bt_1">
                <a href="{{ engagements|link }}">En savoir plus</a>
            </div>
        </div>
    </div>
    <!-- choose section end -->
{% endblock indexEngagement %}
