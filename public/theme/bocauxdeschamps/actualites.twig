{% extends 'partials/_master.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/actuality.css') }}">

{% endblock %}

{% block main %}
    <div class="container actualityContainer p-4">
        <h1 class="text-center mb-4">
            Nos actualit√©es
        </h1>
        <div class="band mb-4 p-auto">
            {% for record in records %}
                {% if loop.index === 1 %}
                    {% include 'partials/actuality/_actualityCard.twig'  with {'class': 'item-1'} %}
                {% else %}
                    {% include 'partials/actuality/_actualityCard.twig' with {'class': 'item-'~loop.index } %}
                {% endif %}
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center w-100">
            {{ pager(records, template = 'helpers/_pager_bootstrap.html.twig') }}
        </div>
    </div>

{% endblock %}
