{% extends 'partials/_master.twig' %}
{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('actualityStyle', null, 'bocaux') }}
    {{ encore_entry_link_tags('actualitySingle', null, 'bocaux') }}

{% endblock %}
{% block main %}
    <div class="actu container">
        <div class="mb-5">
            <h1 class="my-5 pt-5 fw-bold text-center text-lg-start">{{ record|title }}</h1>
            {% include 'partials/_image.twig' with ({'image': record|image}) %}
            {% with { 'record': record, 'exclude': [record|image.fieldname|default(), record.teaser] } %}
            {{ block('sub_fields', 'helpers/_fields.twig') }}
            {% endwith %}
        </div>
        {% include 'partials/_relatedContent.twig' %}
    </div>
{% endblock main %}
