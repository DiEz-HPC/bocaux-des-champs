{% extends 'partials/_master.twig' %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/actuality.css') }}">
    <link rel="stylesheet" href="{{ asset('css/actualitySingle.css') }}">
{% endblock %}
{% block main %}
    <div class="container">
        <div class="mb-5">
            <h1 class="my-5 fw-bold text-center text-lg-start">{{ record|title }}</h1>
            {% include 'partials/_image.twig' with ({'image': record|image}) %}
            {% with { 'record': record, 'exclude': [record|image.fieldname|default(), record.teaser] } %}
            {{ block('sub_fields', 'helpers/_fields.twig') }}
            {% endwith %}
        </div>
        {% include 'partials/_relatedContent.twig' %}
    </div>
{% endblock main %}
