<div class="card my-4 largeCard">
    <a href="{{record|link}}" alt="{{record|title}}">
        <div class="row w-100">
            <div class="col-md-5">
                {% if record|image %}
                    <img src="{{ record|image }}" alt="{{ record|image.alt|default() }}" class="img-fluid rounded-start"/>
                {% endif %}
            </div>
            <div class="col-md-5">
                <div class="card-body">
                    <h5 class="card-title">{{record|title}}</h5>
                    <p class="card-text">{{ record.teaser }}</p>
                </div>
            </div>
        </div>
      
    </a>
</div>
